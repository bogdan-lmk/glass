.block
  display: flex
  flex-direction: column
  position: relative

.block-main
  background: url('/static/img/content/bg-1.png') no-repeat center
  background-size: cover
  width: 100%
  height: 100%
  max-height: 100%

.block-main-content
  display flex
  align-items: center
  width: 100%
  justify-content: center
  flex-direction: column

.district
  display: flex
  align-items: center
  margin-top: 40px
  margin-bottom: 120px

.district-name
  font-weight: 700
  font-size: 18px
  color: whiteColor
  margin-left: 20px
  text-transform: uppercase

.block-main-title
  color: whiteColor
  text-transform: uppercase
  font-size: 100px
  font-weight: 700
  letter-spacing: 7px


.block-main-subtitle
  font-family: PTSansFont
  color: whiteColor
  text-align: center
  font-size: rem(25px)
  width: 30%
  margin-bottom: 80px

.offer-content
  display: flex
  width: 100%
  justify-content: center
  margin-bottom: 30px
.offer
  margin-right: 200px
  &:last-child
    margin-right: 0

.offer-text
  color: whiteColor


.offer-large
  color: orange
  font-size: rem(90px)
  margin: 0 5px
  letter-spacing: 5px

.offer-bottom
  display: flex
  flex-direction: column
  position: relative
  &::before
    content: ''
    width: 100%
    height: 2px
    position: absolute
    left: 0
    top: -10px
    background-color: whiteColor

.offer-text-bottom
  font-size: rem(28px)
  color: whiteColor
  font-family: PTSansFont
  font-weight: 700

.offer-subtext-bottom
  color: whiteColor
  font-family: PTSansFont

.block-counter
  width: 100%
  justify-content: center
  align-items: center
  background: dark-blue-two
  padding: 40px 0
.counter-content-top
  display: flex
  align-items: baseline
  margin-bottom: 20px

.counter-top
  margin: 0 40px
  display: flex

.counter-text-top
  color: whiteColor
  font-size: rem(50px)

.counter-number-top
  font-size: rem(60px)
  color: whiteColor
  background: dark-grey
  padding: 20px 15px
  font-family: HelveticaNeue
  font-weight: 700
  letter-spacing: 10px

.counter-number-top-single
  margin-right: 12px

.counter-content-bottom
  display: flex
  align-items: baseline

.counter-bottom
  margin: 0 40px
  display: flex

.counter-text-bottom
  color: whiteColor
  font-size: rem(30px)

.counter-number-bottom
  font-size: rem(98px)
  color: orange
  background: dark-grey
  padding: 10px 15px
  font-family: HelveticaNeue
  font-weight: 700
  letter-spacing: 10px
  margin-right: 10px
  &:last-child
    margin-right: 0
.counter-number-top-single
  margin-right: 12px

.block-purpose
  justify-content: center
  align-items: center

.title
  text-transform: uppercase
  color: dark-blue
  font-size: 40px
  font-weight: 700
  align-self: center

.purpose-title
  display: flex
  align-self: center
  margin: 60px 0


.purpose-content
  display: flex
  width: 50%
  flex-flow: wrap
  justify-content: space-around
  align-items: baseline

.purpose
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  width: 30%
  margin-bottom: 80px

.purpose-desc
  font-size: rem(20px)
  color: black-two
  margin: 30px 0
  text-align: center

.block-types
  padding: 65px 0 80px 0
  justify-content: center
  align-items: center
  background: skyblue

.types-content
  display: flex
  width: 60%
  flex-flow: wrap
  align-items: baseline
  margin-top: 60px
  justify-content: center


.type
  width: 20%
  display: flex
  flex-direction: column
  align-items: center
  margin-bottom: 30px
  margin-right: 170px
  position: relative
  &:last-child
    margin-right: 0
  &:after
    content: ''
    width: 0
    height: 0
    border-style: solid
    border-width: 50px 115px 0 115px
    border-color: whiteColor transparent transparent transparent
    position: absolute
    bottom: -50px

.type-name
  color: whiteColor
  font-size: rem(20px)
  font-weight: 700
  text-transform uppercase
  background: blue
  width: 100%
  padding: 25px 0
  text-align: center

.type-info
  position: relative
  display: flex
  width: 100%
  flex-direction: column
  align-items: center
  background: whiteColor


.type-icon
  margin: 25px 0
  width: 50px
  height: 50px
  display: flex
  align-items: center
  justify-content: center
  border-radius: 50%
  box-shadow: 0px 3px 5px 5px #eff0f0
