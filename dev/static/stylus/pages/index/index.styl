.block
  display: flex
  flex-direction: column
  position: relative

.block-main
  background: url('/static/img/content/bg-1.png') no-repeat center
  background-size: cover
  width: 100%
  max-height: 100%
  background-attachment: fixed


.block-main-content
  display flex
  align-items: center
  width: 100%
  justify-content: center
  flex-direction: column
  padding-top: 85px

.district
  display: flex
  align-items: center
  margin-top: 40px
  margin-bottom: 120px

.district-name
  font-weight: 700
  font-size: 18px
  color: whiteColor
  margin-left: 20px
  text-transform: uppercase

.block-main-title
  color: whiteColor
  text-transform: uppercase
  font-size: 100px
  font-weight: 700
  letter-spacing: 7px


.block-main-subtitle
  font-family: PTSansFont
  color: whiteColor
  text-align: center
  font-size: rem(25px)
  width: 30%
  margin-bottom: 80px

.offer-content
  display: flex
  width: 100%
  justify-content: center
  margin-bottom: 30px
.offer
  margin-right: 200px
  &:last-child
    margin-right: 0

.offer-text
  color: whiteColor


.offer-large
  color: orange
  font-size: rem(90px)
  margin: 0 5px
  letter-spacing: 5px

.offer-bottom
  display: flex
  flex-direction: column
  position: relative
  &::before
    content: ''
    width: 100%
    height: 2px
    position: absolute
    left: 0
    top: -10px
    background-color: whiteColor

.offer-text-bottom
  font-size: rem(28px)
  color: whiteColor
  font-family: PTSansFont
  font-weight: 700

.offer-subtext-bottom
  color: whiteColor
  font-family: PTSansFont

.block-counter
  width: 100%
  justify-content: center
  align-items: center
  background: dark-blue-two
  padding: 40px 0
.counter-content-top
  display: flex
  align-items: baseline
  margin-bottom: 20px

.counter-top
  margin: 0 40px
  display: flex

.counter-text-top
  color: whiteColor
  font-size: rem(50px)

.counter-number-top
  font-size: rem(60px)
  color: whiteColor
  background: dark-grey
  padding: 20px 15px
  font-family: HelveticaNeue
  font-weight: 700
  letter-spacing: 10px

.counter-number-top-single
  margin-right: 12px

.counter-content-bottom
  display: flex
  align-items: baseline

.counter-bottom
  margin: 0 40px
  display: flex

.counter-text-bottom
  color: whiteColor
  font-size: rem(30px)

.counter-number-bottom
  font-size: rem(98px)
  color: orange
  background: dark-grey
  padding: 10px 15px
  font-family: HelveticaNeue
  font-weight: 700
  letter-spacing: 10px
  margin-right: 10px
  &:last-child
    margin-right: 0
.counter-number-top-single
  margin-right: 12px

.block-purpose
  justify-content: center
  align-items: center

.title
  text-transform: uppercase
  color: dark-blue
  font-size: 40px
  font-weight: 700
  align-self: center

.purpose-title
  display: flex
  align-self: center
  margin: 60px 0


.purpose-content
  display: flex
  width: 50%
  flex-flow: wrap
  justify-content: space-around
  align-items: baseline

.purpose
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  width: 30%
  margin-bottom: 80px

.purpose-desc
  font-size: rem(20px)
  color: black-two
  margin: 30px 0
  text-align: center

.block-types
  padding: 65px 0 80px 0
  justify-content: center
  align-items: center
  background: skyblue  url('/static/img/general/decor.png') no-repeat center
  background-attachment: fixed
  position: relative

.types-title
  font-size: rem(35px)

.types-content
  display: flex
  width: 60%
  flex-flow: wrap
  align-items: baseline
  margin-top: 60px
  justify-content: center


.type
  width: 20%
  display: flex
  flex-direction: column
  align-items: center
  margin-bottom: 30px
  margin-right: 170px
  position: relative
  z-index: 11
  box-shadow: 0px 17px 40px 1px rgba(0,0,0,0.1)
  &:last-child
    margin-right: 0
  &:after
    content: ''
    background-color:  whiteColor
    padding-bottom: 50%
    width: 57.7%
    z-index: -1
    position: absolute
    bottom: -52%
    left: 0
    transform-origin: 0 0
    transform: rotate(-30deg) skewX(30deg)
    box-shadow: 0px 17px 40px 1px rgba(0,0,0,0.1)

.type-name
  color: whiteColor
  font-size: rem(20px)
  font-weight: 700
  text-transform uppercase
  background: blue
  width: 100%
  padding: 25px 0
  text-align: center

.type-info
  position: relative
  display: flex
  width: 100%
  flex-direction: column
  align-items: center
  background: whiteColor
  padding: 0 20px

.type-icon
  margin: 25px 0
  width: 50px
  height: 50px
  display: flex
  align-items: center
  justify-content: center
  border-radius: 50%
  box-shadow: 0px 2px 3px 3px #eff0f0

.type-info-text
  font-family: PTSansFont
  font-size: rem(16px)
  color: black-two
  display: flex
  align-self: flex-start

.type-value
  font-weight: 900
  margin-left: 10px
  display: flex
  align-self: flex-end

.block-steps
  background: url('/static/img/general/steps-bg.png') no-repeat center
  background-size: cover
  background-attachment: fixed
  padding: 70px 0 125px 0
  position: relative
  z-index: 11
  &:before
    content: ''
    position: absolute
    width: 100%
    height: 100%
    background: linear-gradient(to bottom, rgba(0,27,47,1) 0%,rgba(0,27,47,0.01) 100%)
    top: 0
    left: 0
    z-index: 0
.steps-title
  margin-bottom: 75px
  color: whiteColor
  z-index: 11

.steps-content
  display: flex
  flex-flow: wrap
  width: 60%
  align-self: center
  margin-top: 60px

.step
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  width: 25%
  position: relative


.step-image
  margin-bottom: 45px
  position: relative
  &:after
    content: ''
    position: absolute
    background:  url('/static/img/general/steps-arrow.png') no-repeat center
    width: 80px
    height: 31px
    right: -150%
    top: 50%

.step-image-second
  &:after
    transform: rotateX(180deg)

.step-image-last
  &:after
    display: none


.step-bg-number
  content: ''
  position: absolute
  top: -40%
  left: 50%
  transform: translateX(-50%)
  background: url('/static/img/general/steps-number.png') no-repeat center


.step-name
  font-size: rem(24px)
  color: light-blue
  text-transform: uppercase
  font-weight: 700
  margin-bottom: 20px

.step-desc
  font-family: PTSansFont
  color: whiteColor
  width: 85%
  text-align: center
.block-documents
  padding: 70px 0 60px 0
  justify-content: center
  align-items: center
  background: skyblue

.documents-title
  font-size: rem(35px)
  margin-bottom: 40px


.documnets-content
  display: flex
  flex-flow: wrap
  width: 60%
  justify-content: space-around
  margin: 35px 0


.document
  display: flex
  flex-direction: column
  width: 30%
  align-items: center
  justify-content: center
  background: white
  padding: 25px 0
  box-shadow: 0px 5px 18px 0px rgba(0,0,0,0.1)
  &:hover
    cursor: pointer
  &:hover .document-name
    color: blue
    transition: 0.3s ease-in-out
  &:hover .document-name
    &:after
      opacity: 1
      transition: 0.3s ease-in-out
.document-name
  font-size: rem(24px)
  font-weight: 700
  color: dark-blue
  margin-top: 35px
  position: relative
  transition: 0.3s ease-in-out
  &:after
    position: absolute
    left: 0
    bottom: 0px
    content: ''
    width: 100%
    height: 2px
    background: blue
    opacity: 0
    transition: 0.3s ease-in-out
.block-useful
  justify-content: center
  align-items: center
  padding: 70px 0

.useful-content
  display: flex
  flex-flow: wrap
  width: 65%
  justify-content: space-between

.useful-link-main
  max-width 600px
  width: 50%
  display: flex
  margin-bottom: 20px
  &:last-child
    margin-right: 0

.useful-img
  max-width: 100%
  height: auto
  border: 2px solid transparent
  transition: 0.3s ease-in-out
  box-shadow: 0px 5px 18px 0px rgba(0,0,0,0.1)
  &:hover
    border: 2px solid orange
    transition: 0.3s ease-in-out

.useful-link-secondary
  display: flex
  max-width: 390px
  width: 30%

.useful-content-secondary
  margin-bottom: 35px

#map
  display: flex
  width: 100%
  height: 50vh
