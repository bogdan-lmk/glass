footer
  flex 0 0 auto
  display flex
  flex-flow wrap
  background: dark-blue-two
  padding: 65px 0 65px 125px
  position: relative
  &:after
    content: ''
    position: absolute
    background: url('/static/img/general/fd.png') no-repeat center
    width 480px
    height: 560px
    left: 0
    top: 0

.subscribe-block
  position: relative
  max-width: 380px
  z-index: 1
  display: flex
  flex-direction: column
  align-items: flex-start

.logo-footer
  position: absolute
  left: -20%
  top: 0

.logo-text-footer
  width: 100%
  margin-left: 0
  margin-bottom: 40px

.subscribe-text
  text-style-footer()
  margin-bottom: 25px



.form-subscribe-footer
  display: flex
  margin-bottom: 15px
  width: 100%

.footer-input
  font-family: PTSansFont
  font-size: rem(16px)
  width: 100%
  color: blue-two
  padding: 25px 15px
  border-radius: 25px
  background: navy-blue
  border: none
  +placeholder
    color: blue-two

.copyright
  color: whiteColor
  font-weight: 700
