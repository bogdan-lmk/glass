.header
  display: flex
  padding: 30px 35px
  position: relative
  z-index: 11
.header-content
  display: flex
  width: 50%
  align-items: center
  margin-right: 100px
  &:last-child
    margin-right: 0
.logo-text
  color: whiteColor
  font-size: rem(18px)
  font-weight: 700
  width: 75%
  margin-left: 20px
.company-number
  color: whiteColor
  font-size: rem(20px)
  font-weight: 700
  margin-right: 25px
  &:last-child
    margin-right: 0

.header-overlay
  width: 100%
  height: 100%
  position: absolute
  left: 0
  right: 0
  z-index: -1
  opacity: 0.8
  background: gradientColor
