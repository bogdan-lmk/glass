.main-nav
  display flex
  padding 15px 0
  background dark-blue
  align-items: center
  justify-content: space-around
  width: 100%

.navigation
  width: 80%
  display: flex
  align-items: center
  justify-content: space-evenly

.nav-list
  position: relative
  cursor: pointer
  transition: 1s ease
  &:hover
    color: red
    transition: 1s ease
  &:after
    opacity: 0
    content: ''
    width: 100%
    height: 2px
    background: orange
    position: absolute
    bottom: -15px
    left: 0
    transition: 1s ease
  &:hover:after
    opacity: 1
    transition: 1s ease
.nav-link
  color: whiteColor
  font-size: 18px

.search-btn
  align-self: flex-end
  width: 22px
  height: 22px
  background: url('/static/img/general/search-icon.png') no-repeat center
  &:hover
    cursor: pointer
